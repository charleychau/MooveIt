<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_end_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_score"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.charleychau.myapplication.EndGame">

    <TextView
        android:text="Game Over!"
        android:layout_marginTop="49dp"
        android:id="@+id/gameOver"
        android:layout_height="150dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:layout_width="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Main Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainmenuButton"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_alignBaseline="@+id/playAgainButton"
        android:layout_alignBottom="@+id/playAgainButton"
        android:layout_alignEnd="@+id/score" />

    <Button
        android:text="Play Again!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:id="@+id/playAgainButton"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/score" />

    <TextView
        android:text="TextView"
        android:gravity="center"
        android:textSize="35dp"
        android:id="@+id/score"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:layout_marginBottom="59dp"
        android:layout_above="@+id/mainmenuButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
